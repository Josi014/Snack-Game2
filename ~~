 function marron() {
            if (button4.value === 'MARRON') {
                for (var i = 0; i < rastro.length; i++) {
                    paint.fillStyle = "brown";
                    paint.fillRect(rastro[i].x * tq, rastro[i].y * tq, tq, tq);
                }
            } else {
                button4.value = 'MARRON';

            }
        }

        function cinza() {
            if (button5.value === 'CINZA') {
                for (var i = 0; i < rastro.length; i++) {
                    paint.fillStyle = "gray";
                    paint.fillRect(rastro[i].x * tq, rastro[i].y * tq, tq, tq);
                }
            } else {
                button5.value = 'CINZA';

            }
        }

        const buttonsPlacaCores = document.querySelector(".map");

        buttonsPlacaCores.addEventListener("click", e => {
            Array.from(buttonsPlacaCores.children).forEach(item =>
                item.classList.remove("active")
            );
            if (e.target.classList.contains("azul")) {
                for (let i = 0; i < rastro.length; i++) {
                    paint.fillStyle = "blue";
                    paint.fillRect(rastro[i].x * tq, rastro[i].y * tq, tq, tq);
                }
            }
         });

        function ocean() {
            if (button6.value === 'OCEAN') {
                for (var i = 0; i < rastro.length; i++) {
                    paint.fillStyle = "rgba(34, 214, 227, 0.744)";
                    paint.fillRect(rastro[i].x * tq, rastro[i].y * tq, tq, tq);
                }
            } else {
                button6.value = 'OCEAN';

            }
        }
